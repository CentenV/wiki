---
import type { BackgroundImage } from "src/types";
import "@style/global.css";
import { Image } from "astro:assets";

interface Props {
    title: string;
    backgroundImage: BackgroundImage;
}
const { title, backgroundImage } = Astro.props;
---

<div class="flex flex-col h-full w-full">
    {/* Background Image/Video */}
    <div class=`intermediate-page-bg rounded-wiki h-1/3 overflow-hidden`>
        <Image src={backgroundImage.obj} alt={""}/>
    </div>
    <div class="p-4">
        {/* Misc */}
        <div>
            <header class="mt-3 mb-3">{title}</header>
        </div>
        {/* Links */}
        <div class="flex flex-col gap-3">
            <slot />
        </div>
    </div>
</div>

<style>
    img {
        object-position: center 100%;
    }
</style>
