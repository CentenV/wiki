---
import TopicNavigationBar from "@components/TopicNavigationBar.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>CentenV's Wiki</title>
	</head>
	<body>
		<div
			class="flex flex-row overflow-hidden bg-wiki-background-color h-screen w-screen p-4 gap-3 flex-shrink-0"
		>
			{/* Navbar */}
			<TopicNavigationBar />
			{/* Content */}
			<main
				class="bg-wiki-foreground-color rounded-wiki border-wiki border-wiki-border-color w-full h-full overflow-scroll"
			>
				<slot />
			</main>
		</div>
	</body>
</html>

<style is:global>
	html, body {
		color: white;
		font: 1rem;
		/* font-family: var(--lexend-font); */
		font-weight: 400;
	}

	header {
		font-size: 2.8rem;
		font-weight: 700;
		margin-bottom: 1.4rem;
	}

	h1 {
		margin-top: 1rem;
		font-size: 2.8rem;
		font-weight: 700;
		margin-bottom: 1.3rem;
		border-bottom: solid 1px;
		border-color: white;
	}

	h2 {
		margin-top: 1rem;
		font-size: 1.8rem;
		font-weight: 700;
		margin-bottom: 1rem;
		border-bottom: solid 1px;
		border-color: white;
	}

	h3 {
		margin-top: 1rem;
		font-size: 1.5rem;
		font-weight: bold;
		margin-bottom: 0.8rem;
	}

	h4 {
		font-size: 1.2rem;
		font-weight: bold;
		margin-bottom: 0.6rem;
	}

	h5 {
		font-size: 1rem;
		font-weight: bold;
		margin-bottom: 0.5rem;
	}

	h6 {
		font-size: 0.95rem;
		font-weight: bold;
		color: #b2b2b2;
		margin-bottom: 0.5rem;
	}

	pre {
		background-color: #4d4d4d;
		padding: 1.2rem;
		border-radius: 0.4rem;
		margin-bottom: 0.5rem;
	}

	p > code {
		border-radius: 0.4rem;
		background-color: #4d4d4d;
		padding: 0.3em;
	}

	blockquote {
		border-left: 3px;
		border-left-style: solid;
		border-color: #393939;
		padding-left: 1em;
		margin-top: 0.5em;
		margin-bottom: 0.5em;
	}
</style>
